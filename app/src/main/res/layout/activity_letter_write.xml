<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/letterWrite_w3w"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="현재 위치"
        android:textColor="#777"
        android:gravity="center"/>

    <TextView
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="받는 사람 번호"
        android:textColor="#777"
        android:gravity="center"/>


    <LinearLayout

        android:id="@+id/receiver_phone"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="0.1"
        android:layout_height="50dp"
        android:orientation="horizontal"

        >
        <ImageView

            android:id="@+id/image"
            android:src="@drawable/letter_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp" />

        <EditText
            android:id="@+id/phone1"

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="010"
            android:textColor="#777"
            />

        <TextView

            android:layout_width="wrap_content"
            android:text=" - "
            android:gravity="center"
            android:textColor="#777"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/phone2"

            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="0000"
            android:textColorHint="#ddd"
            android:textColor="#777"
            />

        <TextView

            android:gravity="center"
            android:layout_width="wrap_content"
            android:text=" - "
            android:textColor="#777"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/phone3"

            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="0000"
            android:textColorHint="#ddd"
            android:textColor="#777"
            />



    </LinearLayout>



    <EditText
        android:id="@+id/dialog_title"
        android:layout_marginTop="20dp"
        android:hint="Title"
        android:textColorHint="#ccc"
        android:layout_weight="0.2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"

        android:textColor="#777"

        />

    <EditText

        android:layout_marginTop="10dp"
        android:id="@+id/content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Content"
        android:textColorHint="#ccc"
        android:gravity="center"
        android:layout_weight="0.5"

        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:textColor="#777"
        />

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.05"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/timeLock_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="시간 설정하기"
            android:visibility="invisible"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_timeLock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:text="봉인하지 않음"
            />
        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:src="@android:color/darker_gray"
            android:id="@+id/po_image2"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#f26d7d"
            app:allow_random_color="false"
            app:siShape="@drawable/ic_lock"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ButtonCancel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:background="@color/serenity"
            android:text=" 취소 "
            />
        <Button
            android:id="@+id/ButtonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/rosequartz"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text=" 전송 "

            />

    </LinearLayout>


</LinearLayout>