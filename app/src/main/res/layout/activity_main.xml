<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_explain"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:src="@drawable/email"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/letter_send_btn"
        android:layout_width="match_parent"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="50dp"
        android:text="Let's Start"
        android:background="@drawable/btn_round_gray"
        android:layout_marginBottom="30dp"
        android:textColor="@color/semi_black"
        android:layout_alignParentBottom="true"
        android:visibility="visible"

        />

    <Button
        android:id="@+id/letter_find_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:text="편지 찾기"
        android:visibility="gone"
        android:background="@drawable/btn_round_yello"

        android:layout_marginBottom="108dp"
        android:layout_alignParentBottom="true"

        />

    <Button
        android:id="@+id/service_introduce"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:text="서비스 소개"
        android:background="@drawable/btn_round_blue"
        android:visibility="gone"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"

        />




</RelativeLayout>