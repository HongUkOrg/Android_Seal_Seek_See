<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ganari"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".SendLetterActivity">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></fragment>


    <RelativeLayout
        android:id="@+id/Top"
        android:layout_width="fill_parent"
        android:layout_height="155dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_bottom_round_gray"
        android:orientation="horizontal"
        android:padding="1dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="Seal Seek See"
            android:textColor="#000"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ProCessing..."
            android:textColor="#333"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView

        android:id="@+id/trans_words"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/btn_round_ganari"
        android:gravity="center"
        android:text="processing.."
        android:textColor="#754F44"
        android:textSize="16sp" />


    <Button
        android:id="@+id/send_letter_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/ganari"

        android:background="@drawable/btn_round_semiblack"
        android:text="현재 위치에 편지 남기기"

        />

</android.support.v7.widget.ContentFrameLayout>