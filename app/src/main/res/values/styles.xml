<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ganari</item>
        <item name="colorPrimaryDark">@color/ganari</item>
        <item name="colorAccent">@color/semi_black</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerStyle</item>
    </style>
    <style name="TintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/indigo</item>
    </style>
    <style name="CheckBoxTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/darkGreen</item>
    </style>

    <style name="EditTextTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryText</item>

    </style>

    <style name="DialogTriggerButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/ganari</item>

    </style>
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/ganari_dark</item>
        <item name="colorControlHighlight">@color/ganari_dark</item>
    </style>



</resources>
